<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_facilities_asset_search_fixed" model="ir.ui.view">
        <field name="name">facilities.asset.search.fixed</field>
        <field name="model">facilities.asset</field>
        <field name="arch" type="xml">
            <search string="Assets">
                <field name="name"/>
                <field name="asset_code"/>
                <field name="barcode"/>
                <field name="serial_number"/>
                <field name="asset_tag"/>
                <field name="category_id"/>
                <field name="facility_id"/>
                <field name="location"/>
                <field name="responsible_id"/>
                <field name="manufacturer_id"/>
                <field name="model_number"/>
                <field name="condition"/>
                <field name="state"/>
                <field name="warranty_status"/>

                <!-- Filters -->
                <filter string="Active" name="filter_active_records" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Draft" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Active Assets" name="filter_active_state" domain="[('state', '=', 'active')]"/>
                <filter string="Under Maintenance" name="filter_maintenance" domain="[('state', '=', 'maintenance')]"/>
                <filter string="Disposed" name="filter_disposed" domain="[('state', '=', 'disposed')]"/>
                <separator/>
                <filter string="Maintenance Due" name="filter_maintenance_due" domain="[('maintenance_due', '=', True)]"/>
                <filter string="Valid Warranty" name="filter_valid_warranty" domain="[('warranty_status', '=', 'valid')]"/>
                <filter string="Expired Warranty" name="filter_expired_warranty" domain="[('warranty_status', '=', 'expired')]"/>

                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_by_category" context="{'group_by':'category_id'}"/>
                    <filter string="Project/Facility" name="group_by_facility" context="{'group_by':'facility_id'}"/>
                    <filter string="State" name="group_by_state" context="{'group_by':'state'}"/>
                    <filter string="Condition" name="group_by_condition" context="{'group_by':'condition'}"/>
                    <filter string="Warranty Status" name="group_by_warranty" context="{'group_by':'warranty_status'}"/>
                    <filter string="Responsible Person" name="group_by_responsible" context="{'group_by':'responsible_id'}"/>
                    <filter string="Manufacturer" name="group_by_manufacturer" context="{'group_by':'manufacturer_id'}"/>
                    <filter string="Department" name="group_by_department" context="{'group_by':'department_id'}"/>
                    <filter string="Performance Status" name="group_by_performance" context="{'group_by':'current_performance_status'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>