<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="maintenance_job_plan_view_tree" model="ir.ui.view">
        <field name="name">maintenance.job.plan.tree</field>
        <field name="model">maintenance.job.plan</field>
        <field name="arch" type="xml">
            <tree string="Maintenance Job Plans">
                <field name="name"/>
                <field name="code"/>
                <field name="asset_category_ids" widget="many2many_tags"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="maintenance_job_plan_view_form" model="ir.ui.view">
        <field name="name">maintenance.job.plan.form</field>
        <field name="model">maintenance.job.plan</field>
        <field name="arch" type="xml">
            <form string="Maintenance Job Plan">
                <header>
                    <!-- CORRECTED: Removed 'attrs' from toggle_active buttons. -->
                    <!-- Odoo 17 handles visibility for 'active' field's toggle_active implicitly. -->
                    <button name="toggle_active" type="object" string="Archive"
                            confirm="Are you sure you want to archive this Job Plan?"/>
                    <button name="toggle_active" type="object" string="Unarchive"
                            confirm="Are you sure you want to unarchive this Job Plan?"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g., FCU Monthly Maintenance"/></h1>
                        <field name="code" readonly="1"/>
                    </div>
                    <group>
                        <group>
                            <field name="asset_category_ids" widget="many2many_tags"
                                   options="{'no_create_edit': True}"/>
                            <!-- If you want to add 'asset_ids' field from maintenance.job.plan, uncomment below -->
                            <!-- <field name="asset_ids" widget="many2many_tags" domain="[('category_id', 'in', asset_category_ids)]"/> -->
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tasks" name="tasks">
                            <field name="task_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="frequency_type"/>
                                    <field name="is_checklist_item"/>
                                    <field name="description"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="name"/>
                                            <field name="frequency_type"/>
                                            <field name="description"/>
                                        </group>
                                        <group>
                                            <field name="sequence"/>
                                            <field name="is_checklist_item"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Guidelines" name="guidelines">
                            <field name="description" widget="html"/>
                        </page>
                        <page string="Other Information" name="other_info">
                            <group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_maintenance_job_plan" model="ir.actions.act_window">
        <field name="name">Maintenance Job Plans</field>
        <field name="res_model">maintenance.job.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Maintenance Job Plan
            </p><p>
                Job Plans define the detailed steps and procedures for different maintenance tasks.
                You can link these plans to your maintenance schedules.
            </p>
        </field>
    </record>

    <menuitem id="menu_maintenance_job_plans"
              name="Job Plans"
              parent="facilities_management.menu_maintenance"
              action="action_maintenance_job_plan"
              sequence="20"/>

</odoo>